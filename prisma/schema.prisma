generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  document String @unique
  compra Compra[]
}

model Template {
  id Int @id @default(autoincrement())
  nome String
  descricao String
  valor Decimal
  autor String
  tecnologias  Tecnologia[]
  compra Compra[]
}

model Tecnologia {
  id Int @id @default(autoincrement())
  nome String
  templates   Template[]
}

model Compra {
  id Int @id @default(autoincrement())
  valor Decimal
  usuario User[]
  template Template[]
}
